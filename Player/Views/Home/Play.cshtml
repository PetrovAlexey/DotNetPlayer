@{
    ViewData["Title"] = "Player";
}
<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="~/css/Player.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/e3fca0ef5f.js" crossorigin="anonymous"></script>

@if (User.Identity.IsAuthenticated)
{
    @model Player.Models.Audio

    <h3>@Model?.Name</h3>

    <figure>
        <figcaption>Listen:</figcaption>
        <audio controls
               src="~/@Model?.Path">
            Your browser does not support the
            <code>audio</code> element.
        </audio>
    </figure>

    <div id="player">
        <div class="album">
            <div class="heart"><i class="fas fa-heart"></i></div>
        </div>
        <div class="info">
            <div class="progress-bar">
                <div class="time--current">1:25</div>
                <div class="time--total">-3:15</div>
                <div class="fill"></div>
            </div>
            <div class="currently-playing">
                <h2 class="song-name">Symphony</h2>
                <h3 class="artist-name">Clean Bandit ft. Zara Larsson</h3>
            </div>
            <div class="controls">
                <div class="option"><i class="fas fa-play"></i></div>
                <div class="volume"><i class="fas fa-volume-up"></i></div>
                <div class="previous"><i class="fas fa-backward"></i></div>
                <div class="play"><i class="fas fa-play"></i></div>
                <div class="pause"><i class="fas fa-pause"></i></div>
                <div class="next"><i class="fas fa-forward"></i></div>
                <div class="shuffle"><i class="fas fa-random"></i></div>
                <div class="add"><i class="fas fa-plus"></i></div>
            </div>
        </div>
    </div>

    <footer>
        <p>made by <a href=""> Petrov</a> ♡
    </footer>


    <form method="get" asp-controller="Home" asp-action="Index">
        <input class="btn btn-light btn-lg" type="submit" value="На главную" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вход</a>
    <a asp-controller="Account" asp-action="Register">Регистрация</a>
}

